# ملف متغيرات البيئة لـ Last.bot
# انسخ هذا الملف إلى .env وأدخل القيم الحقيقية
# المؤلف: MiniMax Agent
# التاريخ: 2025-11-12

# ================================
# إعدادات الأمان
# ================================
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this
SESSION_SECRET_KEY=your_super_secret_session_key_change_this
ENCRYPTION_KEY=your_32_character_encryption_key
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=5
RATE_LIMIT_WINDOW=300

# ================================
# قاعدة البيانات
# ================================
DATABASE_PATH=data/intelligent_bot.db
DB_TYPE=sqlite  # sqlite, mysql, postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lastbot
DB_USER=lastbot
DB_PASSWORD=lastbot123
DB_SSL_MODE=prefer

# ================================
# إعدادات Redis
# ================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=lastbot123
REDIS_TIMEOUT=30

# ================================
# الذكاء الاصطناعي
# ================================
OPENAI_API_KEY=your_openai_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
AI_MODEL_DEFAULT=gpt-4-turbo
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4000
AI_TIMEOUT=30
AI_RETRY_ATTEMPTS=3

# ================================
# إعدادات WhatsApp
# ================================
WHATSAPP_NUMBER=your_whatsapp_number@c.us
WHATSAPP_SESSION_PATH=sessions
WHATSAPP_AUTH_TIMEOUT=60
WHATSAPP_LOG_LEVEL=info
WHATSAPP_HEADLESS=true

# ================================
# إعدادات المراقبة
# ================================
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_THRESHOLD=70.0
AUTO_FIX_ENABLED=true
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ================================
# البريد الإلكتروني
# ================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true
SMTP_USE_SSL=false
FROM_EMAIL=your_email@gmail.com
ALERT_EMAIL=admin@lastbot.ai

# ================================
# إعدادات النسخ الاحتياطي
# ================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600  # ثانية (1 ساعة)
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=gzip
S3_BACKUP_BUCKET=lastbot-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ================================
# إعدادات المراقبة والتنبيهات
# ================================
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
GRAFANA_PASSWORD=admin123
ALERT_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# ================================
# إعدادات الأداء
# ================================
MAX_WORKERS=4
WORKER_TIMEOUT=300
REQUEST_TIMEOUT=30
MAX_REQUESTS=1000
MAX_REQUESTS_PER_MINUTE=100

# ================================
# إعدادات الأمان المتقدم
# ================================
ENABLE_2FA=false
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]
ENABLE_HSTS=true
ENABLE_CSP=true
ENABLE_SSL_REDIRECT=true

# ================================
# إعدادات التطوير
# ================================
FLASK_ENV=production  # production, development, testing
DEBUG=false
TESTING=false
SECRET_KEY=your_secret_key_for_testing

# ================================
# إعدادات التحديث التلقائي
# ================================
AUTO_UPDATE_ENABLED=false
UPDATE_CHECK_INTERVAL=3600  # ثانية
REPO_URL=https://github.com/minimax/last-bot.git
BRANCH=main
UPDATE_NOTIFICATIONS=true

# ================================
# إعدادات اللغة والمنطقة
# ================================
DEFAULT_LANGUAGE=ar
TIMEZONE=Asia/Riyadh
DATE_FORMAT=YYYY-MM-DD HH:mm:ss
CURRENCY=SAR

# ================================
# إعدادات التكامل
# ================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
SLACK_WORKSPACE=your_slack_workspace

# ================================
# إعدادات التخزين السحابي
# ================================
CLOUD_STORAGE_PROVIDER=aws  # aws, gcp, azure
GCP_CREDENTIALS_PATH=path/to/gcp/credentials.json
AZURE_STORAGE_ACCOUNT=your_azure_account
AZURE_STORAGE_KEY=your_azure_key

# ================================
# إعدادات تحليلات الويب
# ================================
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token

# ================================
# إعدادات الأداء المتقدم
# ================================
ENABLE_CACHE=true
CACHE_TYPE=redis  # redis, memcached, simple
CACHE_DEFAULT_TIMEOUT=300
ENABLE_SESSION=true
SESSION_TYPE=redis  # redis, filesystem, sqlalchemy
SESSION_REDIS_URL=redis://localhost:6379/1

# ================================
# إعدادات التطوير المتقدم
# ================================
ENABLE_SWAGGER=true
SWAGGER_UI_ENABLED=true
API_VERSION=v1
API_TITLE=Last.bot API
API_DESCRIPTION=API documentation for Last.bot intelligent system
ENABLE_PROFILING=false
PROFILING_SAMPLE_RATE=0.01

# ================================
# إعدادات البحث المتقدم
# ================================
ENABLE_SEARCH=true
SEARCH_ENGINE=elasticsearch  # elasticsearch, whoosh, simple
ELASTICSEARCH_URL=http://localhost:9200
SEARCH_INDEX_PREFIX=lastbot_

# ================================
# إعدادات النسخ والنسخ الاحتياطي
# ================================
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=90
ENABLE_ACCESS_LOGGING=true
ACCESS_LOG_RETENTION_DAYS=30
ENABLE_ERROR_LOGGING=true
ERROR_LOG_RETENTION_DAYS=60

# ================================
# إعدادات الأمان المتقدم
# ================================
ENABLE_IP_WHITELIST=false
IP_WHITELIST=127.0.0.1,::1
ENABLE_IP_BLACKLIST=true
ENABLE_USER_AGENT_FILTERING=true
ENABLE_GEO_BLOCKING=false
ALLOWED_COUNTRIES=SA,AE,KW,QA,BH,OM

# ================================
# إعدادات التنبؤ والتعلم
# ================================
ENABLE_ML_PREDICTIONS=true
ML_MODEL_UPDATE_INTERVAL=86400  # 24 ساعة
ENABLE_ANOMALY_DETECTION=true
ANOMALY_THRESHOLD=0.8
ENABLE_PREDICTIVE_MAINTENANCE=true

# ================================
# إعدادات التكامل مع الأنظمة الخارجية
# ================================
JIRA_INTEGRATION_ENABLED=false
JIRA_URL=https://yourcompany.atlassian.net
JIRA_USERNAME=your_jira_username
JIRA_API_TOKEN=your_jira_api_token

GITHUB_INTEGRATION_ENABLED=false
GITHUB_TOKEN=your_github_token
GITHUB_ORG=your_github_org

NOTION_INTEGRATION_ENABLED=false
NOTION_TOKEN=your_notion_token
NOTION_DATABASE_ID=your_database_id

# ================================
# إعدادات التحليلات المتقدمة
# ================================
ENABLE_BI_DASHBOARD=true
BI_DASHBOARD_URL=https://your-bi-dashboard.com
ENABLE_REAL_TIME_ANALYTICS=true
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_FLUSH_INTERVAL=60

# ================================
# إعدادات الإشعارات المتقدمة
# ================================
ENABLE_PUSH_NOTIFICATIONS=true
PUSH_NOTIFICATION_PROVIDER=firebase  # firebase, apns
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CREDENTIALS_PATH=path/to/firebase/credentials.json

